{% extends 'back.html.twig' %}

{% block css %}
    <link href="{{ asset('./assets/vendors/general/perfect-scrollbar/css/perfect-scrollbar.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
    <h1>Recette</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Nom recette</th>
                <td>{{ recette.nomRec }}</td>
            </tr>
            <tr>
                <th>Description Recette</th>
                <td>{{ recette.recDescription }}</td>
            </tr>
            <tr>
                <th>Type recette</th>
                <td>{{ recette.typeRec }}</td>
            </tr>
            <tr>
                <th>Image recette</th>
                <td>{{ recette.imagerecette }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('back_expert_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('back_expert_edit', { 'id': recette.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Delete
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Alert </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Do you really want to delete your terma ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <a href="{{ path('back_expert_delete',{'id': recette.id}) }}"> <input type="submit" value="Delete" class="btn btn-primary">

                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
{% block js %}
    <script src="{{ asset('./assets/js/demo1/pages/crud/metronic-datatable/base/html-table.js') }}" type="text/javascript"></script>
{% endblock %}
