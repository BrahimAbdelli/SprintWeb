
{% extends 'back.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <h1> Event edit</h1>

            {{ form_start (edit_form) }}
            <div class="form-group">
                <label for="exampleInputEmail1">Nom</label>
                {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control','aria-describedby':'nom','placeholder':'Enter nom'}}) }}
                <small id="emailHelp" class="form-text text-muted">We'\ll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Date Debut</label>
                {{ form_widget(edit_form.datedebut, {'attr': {'class': 'form-control','aria-describedby':'date debut','placeholder':'choisir date'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Date Fin</label>
                {{ form_widget(edit_form.datefin, {'attr': {'class': 'form-control','aria-describedby':'date fin','placeholder':'choisir date'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Description</label>
                {{ form_widget(edit_form.description, {'attr': {'class': 'form-control','aria-describedby':'description','placeholder':'Entrer description'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Lieu</label>
                {{ form_widget(edit_form.lieu, {'attr': {'class': 'form-control','aria-describedby':'lieu','placeholder':'Entrer lieu'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Nombre de Participants</label>
                {{ form_widget(edit_form.nbrParticipants, {'attr': {'class': 'form-control','aria-describedby':'nombre de participants','placeholder':'Entrer nombre'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Prix</label>
                {{ form_widget(edit_form.eveprix, {'attr': {'class': 'form-control','aria-describedby':'prix','placeholder':'Entrer prix'}}) }}
            </div>


            <div class="form-group">
                <label for="exampleInputPassword1">Prix Ofrre</label>
                {{ form_widget(edit_form.prixOffre, {'attr': {'class': 'form-control','aria-describedby':'prix','placeholder':'Entrer prix'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Offre</label>
                {{ form_widget(edit_form.idoffre, {'attr': {'class': 'form-control','aria-describedby':'prix','placeholder':'Entrer prix'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Image</label>
                {{ form_widget(edit_form.image, {'attr': {'class': 'form-control','aria-describedby':'image','placeholder':'Choisir image'}}) }}
            </div>


            <button class="btn btn-sm btn-primary" type="submit" value="Create" class="btn btn-primary">Submit</button>
            {{ form_end(edit_form) }}



            <a class="btn btn-sx btn-success" href="{{ path('back_admin_index') }}">Back to the list</a>


            {{ form_start(delete_form) }}
            <input class="btn btn-sx btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}


        </div>
    </div>
{% endblock %}