{% extends 'front.html.twig' %}

{% block content %}




    <section class="blog-post blog-new-wrapper padding-section">
        <div class="container">
            <div class="blog-post-list">
                <div class="row">
                    {% for utulisateur in users %}
                        {% if utulisateur.role == "ROLE_PAYSAGISTE"%}
