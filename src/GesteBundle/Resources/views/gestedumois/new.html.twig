{% extends 'back.html.twig' %}

{% block content %}




    <div class="col-lg-6">
        <h1>Creation Geste du mois </h1>

        {{ form_start(form,{'attr':{'id':'formp'}}) }}
        <div class="form-group">
            <label for="exampleInputEmail1">Nom Geste</label>
            {{ form_widget(form.nomGeste, {'attr': {'class': 'form-control','aria-describedby':'nom','placeholder':'Enter nom'}}) }}

        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Mois Du Geste</label>
            {{ form_widget(form.moisGeste, {'attr': {'class': 'form-control','aria-describedby':'type','placeholder':'choisir mois du geste'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Description Geste</label>
            {{ form_widget(form.descGeste, {'attr': {'class': 'form-control','aria-describedby':'description','placeholder':'Entrer description'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Image</label>
            {{ form_widget(form.imageGeste, {'attr': {'class': 'form-control','aria-describedby':'image','placeholder':'Choisir image'}}) }}
        </div>
        <input class="btn btn-sm btn-primary" id="submitBtn" type="submit" value="Create" class="btn btn-primary">Submit</input>
        {{ form_end(form) }}


        <div class="row">
            <div class="col-lg-3">
                <a class="btn btn-sm btn-success" href="{{ path('back_jardinier_geste_index') }}">Back to the list</a>
            </div>
        </div>
    </div>
{% endblock %}
