{% extends 'back.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-lg-6">
            <h1>Modification Geste du mois: {{ gesteDuMois.moisGeste }}</h1>

            {{ form_start(edit_form) }}
            <div class="form-group">
                <label for="exampleInputEmail1">Nom Geste</label>
                {{ form_widget(edit_form.nomGeste, {'attr': {'class': 'form-control','aria-describedby':'nom','placeholder':'Enter nom'}}) }}

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Mois Du geste</label>
                {{ form_widget(edit_form.moisGeste, {'attr': {'class': 'form-control','aria-describedby':'type','placeholder':'choisir mois'}}) }}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Description Du Geste</label>
                {{ form_widget(edit_form.descGeste, {'attr': {'class': 'form-control','aria-describedby':'description','placeholder':'Entrer description'}}) }}
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Image Du Geste</label>
                {{ form_widget(edit_form.imageGeste, {'attr': {'class': 'form-control','aria-describedby':'image','placeholder':'Choisir image'}}) }}
            </div>
            <button class="btn btn-sm btn-primary" type="submit" value="Create" class="btn btn-primary">Submit</button>
            {{ form_end(edit_form) }}



            <a class="btn btn-sx btn-success" href="{{ path('back_jardinier_geste_index') }}">Back to the list</a>


            {{ form_start(delete_form) }}
            <input class="btn btn-sx btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}


        </div>
    </div>
{% endblock %}
