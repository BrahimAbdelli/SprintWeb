{% extends 'back.html.twig' %}
{% block content %}
    <center>

        <div class="col-md-6" >
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                    <h3 class="card-title" >Ajouter une catégorie</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form">
                    <div class="card-body">

                        <div class="form-group">

                            {{ form_row(form.nomCat, { 'attr': {'class': 'form-control' ,'placeholder':'Entrer catégorie','id':'exampleInputTitre'} }) }}

                        </div>
                        <div class="form-group">

                            {{ form_row(form.descriptionCat, { 'attr': {'class': 'form-control' ,'placeholder':'Entrer catégorie','id':'exampleInputTitre'} }) }}

                        </div>



                    </div>



                    <!-- /.card-body -->

                    <div class="card-footer">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a href="{{ path('categorie_index') }}" class="btn btn-success">Back to the list</a>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>


        </div>
    </center>
{% endblock %}
