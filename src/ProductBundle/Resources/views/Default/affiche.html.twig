{% extends 'front.html.twig' %}
{% block content %}

    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link href="{{ asset('https://fonts.googleapis.com/css?family=Playfair+Display:400,700%7CRoboto:400,500,700&display=swap') }}"
          rel="stylesheet">

    <!-- Libary -->
    <link rel="stylesheet" href="{{ asset('vendors/owlcarousel/assets/owl.carouselv2.2.css') }}">
    <link rel="stylesheet" href="{{ asset('vendors/owlcarousel/assets/owl.theme.default.min.css') }}">
    <link rel="stylesheet" href="{{ asset('vendors/slick/slick.css') }}">
    <link rel="stylesheet" href="{{ asset('vendors/slick/slick-theme.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('vendors/rangeslider/css/ion.rangeSlider.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('vendors/rangeslider/css/theme.scss.css') }}">
    <link rel="stylesheet" href="{{ asset('vendors/rangeslider/css/layout.min.css') }}">

    <!-- Font -->
    <link rel="stylesheet"
          href="{{ asset('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('fonts/themify-icons/themify-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('fonts/linearicons/style.css') }}">
    <link rel="stylesheet" href="{{ asset('fonts/linea/styles.css') }}">

    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <br>
    <br>
    <br>
    <center> <img src="{{ asset('images/imageee.jpg') }}" alt="Logo" width="1550px" height="650px"> </center>

    <div class="st2-search-block" align="center">
        <form method="POST" class="st2-search-form" action="">
            <div class="at2-search-fields">
                <div class="st2-search-input">
                    <label><h3>Search product:</h3></label>
                    <input type="text" class="search-field" placeholder="Search ..." value="" name="testrech"
                           id="testrech">

                    <button type="submit" class="st2-search-submit">
                        <span class="lnr lnr-magnifier"></span>
                    </button>
                </div>
            </div>
        </form>
    </div>


    {#    <div class="col-12 col-md-12 col-lg-3 custom-col-pt col-xl-3">
           <div class= "col-12 col-md-12 col-lg-3 custom-col-pt col-xl-3">



           </div>

        </div>#}


    <section class="popular-product st2-popular-product padding-section">
        <div class="container">
            <div class="row">
                <div class="box-title">
                    <h5 class="mx-auto box-des des-popular-product">
                        <span class="des-line">Perfect for growing plants</span>
                    </h5>
                    <h2 class="des-title">Popular Products</h2>
                </div>
            </div>
            <div id="prods">

                {% for produit in produits %}
                    {% if loop.index0 is divisibleby(4) %}

                        <div class="row">

                    {% endif %}

                    <div class="col-xl-3 col-md-6 col-lg-4 col-sm-6 col-12">
                        <div class="box-item">
                            <div class="box-item-image">
                                <a href=""><img src="{{ asset('images/') }}{{ produit.image }}" alt="Deal of the week"></a>
                            </div>
                            <div class="box-item-info">
                                <h3 class=""><a href="" class="item-name">{{ produit.nomProd }}</a></h3>
                                <div class="item-price-rate">
                                    <div class="item-price">
                                        {% if produit.prixOffre !=null %}
                                            <span class="cost">{{ produit.prixProd }}DT</span>
                                            <span class="sale">{{ produit.prixOffre }}DT</span>
                                        {% else %}
                                            <span class="sale">{{ produit.prixProd }}DT</span>
                                        {% endif %}

                                    </div>

                                    <div class="item-rating">
                      <span class="rating-badge">
                        <span class="badge-starrating">
                          <i class="star-icon star-icon-color1 lnr lnr-star"></i>
                          <i class="star-icon star-icon-color1 lnr lnr-star"></i>
                          <i class="star-icon star-icon-color1 lnr lnr-star"></i>
                          <i class="star-icon star-icon-color1 lnr lnr-star"></i>
                          <i class="star-icon star-icon-color2 lnr lnr-star"></i>
                        </span>
                      </span>
                                    </div>
                                </div>
                            </div>
                            <div class="offer">
                                {% if produit.idoffre != null %}
                                    <div class="percent">
                                        {{ produit.idoffre.pourcentage*100 }}
                                        %
                                    </div>
                                {% endif %}
                            </div>
                            <div class="button-loop-action">
                                <ul class="loop-action">
                                    <li class="item-action review">
                                        <a class="action-link" href="javascript:void(0);"><i
                                                    class="icon ti-eye"></i></a>
                                    </li>
                                    <li class="item-action wishlist">
                                        <a class="action-link" href="javascript:void(0);"><i
                                                    class="icon lnr lnr-heart"></i></a>
                                    </li>
                                    <li class="item-action add-to-card">
                                        <a class="action-link" href="javascript:void(0);"><i
                                                    class="icon icon-ecommerce-basket"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <a href="{{ path('produit_show', { 'id': produit.id }) }} " class="btn btn-success">show</a>
                        <div>
                            <p data-on-color="#008000"	>{{ produit.categorie.nomCat }}</p>
                        </div>

                    </div>

                    {% if loop.index is divisibleby(4) or loop.last %}
                        </div>
                        <h1></h1>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
    <script src="{{ asset('js/jquery-1.12.4.min.js') }}"></script>
    <script src="{{ asset('vendors/owlcarousel/owl.carouselv2.2.min.js') }}"></script>
    <script src="{{ asset('vendors/slick/slick.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('vendors/rangeslider/js/ion.rangeSlider.min.js') }}"></script>
    <script src="{{ asset('js/custom.js') }}"></script>

    <script>
        function productToHTML(product) {
            htmls = "";
            htmls += '<div class="col-xl-3 col-md-6 col-lg-4 col-sm-6 col-12">';
            htmls += '<div class="box-item">';
            htmls += '<div class="box-item-image">';
            htmls += '<a href=""><img src="';
            htmls += "{{ asset('images/') }}";
            htmls += product["image"];
            htmls += '" alt="Deal of the week" ></a>';
            htmls += '</div><div class="box-item-info"><h3 class=""><a href="" class="item-name">';
            htmls += product["nomProd"];
            htmls += "</a></h3>";
            htmls += '<div class="item-price-rate"><div class="item-price">';

            if (product["prixOffre"]) {
                htmls += '<span class="cost">' + product["prixProd"] + 'DT</span>';
                htmls += '<span class="sale">' + product["prixOffre"] + 'DT</span>';
            } else {
                htmls += '<span class="sale">' + product["prixProd"] + 'DT</span>';
            }

            htmls += "</div>";
            htmls += '<div class="item-rating">\n' +
                '                <span class="rating-badge">\n' +
                '                <span class="badge-starrating">\n' +
                '                <i class="star-icon star-icon-color1 lnr lnr-star"></i>\n' +
                '                <i class="star-icon star-icon-color1 lnr lnr-star"></i>\n' +
                '                <i class="star-icon star-icon-color1 lnr lnr-star"></i>\n' +
                '                <i class="star-icon star-icon-color1 lnr lnr-star"></i>\n' +
                '                <i class="star-icon star-icon-color2 lnr lnr-star"></i>\n' +
                '                </span>\n' +
                '                </span>\n' +
                '                </div>\n' +
                '                </div>\n' +
                '                </div>\n' +
                '                <div class="offer">';
            if (product['idoffre']) {
                htmls += ' <div class="percent">';
                htmls += parseFloat(product['idoffre']['pourcentage']) * 100;
                htmls += "%";
                htmls += '</div>';
            }
            htmls += '\n' +
                '\n' +
                '                </div>\n' +
                '                <div class="button-loop-action">\n' +
                '                <ul class="loop-action">\n' +
                '                <li class="item-action review">\n' +
                '                <a class="action-link" href="javascript:void(0);"><i class="icon ti-eye"></i></a>\n' +
                '            </li>\n' +
                '            <li class="item-action wishlist">\n' +
                '                <a class="action-link" href="javascript:void(0);"><i class="icon lnr lnr-heart"></i></a>\n' +
                '            </li>\n' +
                '            <li class="item-action add-to-card">\n' +
                '                <a class="action-link" href="javascript:void(0);"><i class="icon icon-ecommerce-basket"></i></a>\n' +
                '            </li>\n' +
                '            </ul>\n' +
                '            </div>\n' +
                '            </div>';
            htmls += '<a href="';
            htmls += "{{ path('produit_show', {'id' : 'dummy'}) }}";
            htmls = htmls.replace(/dummy/, product['id']);
            htmls += '" class="btn btn-success">show</a>' +
                '                <div>\n' +
                '                <p>' + product["categorie"]["nomCat"] + '</p>\n' +
                '                </div>\n' +
                '\n' +
                '</div>';
            return htmls;
        }


        $("#testrech").keyup(function () {

            $.ajax({
                url: '{{ (path('rechercher')) }}',
                type: "POST",
                data: {
                    "testrech": $("#testrech").val()
                },
                async: true,
                success: function (produits) {
                    console.log(produits);
                    $("#prods").html('');
                    hh = '';
                    hh += "<div class='row'>";
                    for (let i in produits) {

                        product = produits[i];


                        prod = productToHTML(product);
                        hh += prod;


                    }
                    hh += "</div>";
                    $("#prods").html(hh);

                }
            });
            return false;
        });
    </script>

{% endblock %}
