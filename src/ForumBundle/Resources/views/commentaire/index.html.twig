{% extends 'base.html.twig' %}

{% block body %}
    <center>
    <h1>Commentaires list</h1>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-hover table-responsive">
                    <thead>
                        <tr>

                            <th class="col-sm-4">Descriptioncommentaire</th>
                            <th class="col-sm-2">Datepub</th>
                            <th class="col-sm-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for commentaire in commentaires %}
                        <tr>
                            <td>{{ commentaire.descriptionCommentaire }}</td>
                            <td>{{ commentaire.datepub|date('Y-m-d\\TH:i:sP') }}</td>
                            <td>
                                {% if app.user.id == commentaire.idclient.id %}
                                    <a href="{{ path('commentaire_show', { 'id': commentaire.id }) }}"><button type="button" class="btn btn-primary">Show</button></a>
                                    <a href="{{ path('commentaire_edit', { 'id': commentaire.id }) }}"><button type="button" class="btn btn-warning">Edit</button></a>
                                    <a href="{{ path('commentaire_delete', { 'id': commentaire.id }) }}"><button type="button" class="btn btn-danger">delete</button></a>
                                {% else %}
                                    <a href="{{ path('commentaire_show', { 'id': commentaire.id }) }}"><button type="button" class="btn btn-primary">Show</button></a>
                                {% endif %}

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                            </div>
                        </div>

                    </div><!-- /.container -->

                <ul>
                    <li>

                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <input type="submit" value="Create" />
                        {% if erreur !=null  %}
                            <div class="alert alert-danger" role="alert">
                                <h4 class="alert-heading">Error!!!!</h4>
                                <p> Unable to submit this comment! you can't use bad words in comments</p>
                                <hr>
                            </div>
                        {% endif %}
                        {{ form_end(form) }}
                    </li>
                </ul>
                </center>>
            {% endblock %}
